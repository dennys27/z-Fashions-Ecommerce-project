      <h5 class="fw-bold">Payment details</h5>

      <div class="container-fluid">
         
          {{#if discounted}}
          <label class="fw-bold" for="">Item total: ₹ {{totalPrice}}</label>
         <br>
         <label class="fw-bold" for="">coupon:  -₹  {{discounted}}</label>
         <br>
         {{/if}}
         <label class="fw-bold" for="">Shipping : free</label>
         <br>
         <label class="fw-bold" for="">Grand Total: ₹ {{total}}</label>
         

  
        
      </div>
      



        </div>

