         <label for="">{{defaultAddress.Address}},{{defaultAddress.Apartment}}</label>
         <label for="">{{defaultAddress.Zipcode}}</label>
         <label for="">{{defaultAddress.City}}</label>
         <label for="">{{defaultAddress.State}}</label>
          <br>
         <label for="">{{defaultAddress.Country}}</label>
         <label for="">{{defaultAddress.deliveryPhone}}</label>
        
      </div>
      <form id="Default-Address"  class=" container-fluid" >
        
           <input
              type="text"
              name="FirstName"
           
              placeholder="First name*"
              required hidden
              value="{{defaultAddress.FirstName}}"
              
            />
            <input
              type="text"
              name="userId"
              placeholder="First name"
              value="{{userAd._id}}"
              hidden
             
            />
            <input
              type="text"
              name="LastName"
              class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm"
              placeholder="Last name*"
              required hidden
              value="{{defaultAddress.LastName}}"
            />
        
         
          <input
            type="text"
            name="Address"
            class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm"
            placeholder="Address*"
            required hidden
            value="{{defaultAddress.Address}}"
          />
          <input
            type="text"
            name="Apartment"
            class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm"
            placeholder="Apartment, suite, etc."
            required hidden
            value="{{defaultAddress.Apartment}}"
          />
          <div class="grid md:grid-cols-3 md:gap-2">
            <input
              type="text"
              name="Zipcode"
              class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm"
              placeholder="Zipcode*"
              required hidden
              value="{{defaultAddress.Zipcode}}"
            />
            <input
              type="text"
              name="City"
              class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm"
              placeholder="City*"
              required hidden
              value="{{defaultAddress.City}}"
            />
            <input
              type="text"
              name="State"
              class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm"
              placeholder="State*"
              required hidden
              value="{{defaultAddress.State}}"
            />
          </div>
          <input
            type="text"
            name="Country"
            class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm"
            placeholder="Country*"
            required hidden
            value="{{defaultAddress.Country}}"
          />
          <input
            type="text"
            name="PhoneNumber"
            class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm"
            placeholder="Phone Number*"
            required hidden
             value="{{defaultAddress.deliveryPhone}}"
          />

       
        <button class="btn btn-primary mt-2" style="font-size: 13px;" type="submit">Deliver to this address</button>
        </form>



        </div>




 
        
    </div>
